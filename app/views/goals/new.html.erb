<h1> Create Goal </h1>
<form action="<%= goals_url  %>" method="post">
  <%= auth_token %>
  <label>Target:
    <input type="text" name="goal[target]" value="<%= @goal.target %>">
  </label>
  <input type="hidden" name="goal[is_public]" value="true">
  <label> Private:
    <input type= "checkbox" name="goal[is_public]" value="false"
    <%= 'checked' if !@goal.is_public %>
  </label>
  <input type="hidden" name="goal[is_completed]" value="false">
  <button>Create Goal</button>
</form>
